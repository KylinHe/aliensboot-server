syntax = "proto2";
package protocol;

import "passport_model.proto";

//普通注册账号
message userRegister {
    optional string username = 1; //用户名
    optional string password = 2; //密码
    optional int32 server = 3; //服务器id
}

//登录服务器注册账号返回
message userRegisterRet {
    optional RegisterResult result = 1 [default=registerSuccess];    //注册结果
    optional int64 uid = 2;                 //用户id 注册成功返回此字段
    optional string token = 3;              //登录令牌 注册成功返回此字段
    optional string msg = 4;                //反馈消息 登录失败返回
    optional int64 serverTime = 5;  //服务器时间
}

//用户名密码登录服务器
message userLogin {
    optional string username = 1;		//用户名
    optional string password = 2;		//密码
}

//登录服务器返回
message userLoginRet {
    optional LoginResult result = 1;	//登录结果
    optional int64 uid = 2;             //用户id
    optional string token = 3;          //登录令牌
    optional string msg = 4;                //反馈消息 登录失败返回
    optional int64 serverTime = 5;  //服务器时间
}

//渠道登录
message channelLogin {
    optional string channel = 1; //渠道编号
    optional string channelUID = 2; //渠道用户id
    optional string sdk = 3; //sdk信息
    optional string ip = 4; //登录ip
    //int32 server = 5; //服务器id
}

//渠道登录结果
message channelLoginRet {
    optional int64 uid = 1; //登录成功后游戏的uid
    optional string token = 2; //登录成功后的token信息
    optional int64 serverTime = 3;  //服务器时间
    //string gameServer = 3; //游戏服务器地址信息
}


//token 登录
message tokenLogin {
    optional int64 uid = 1;
    optional string token = 2;
}

message tokenLoginRet {
    optional LoginResult result = 1;	//登录结果
    optional int64 serverTime = 2;  //服务器时间
}

